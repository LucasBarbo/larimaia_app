<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:background="#fcffaa">

    <ImageButton
        android:layout_width="417dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_logo"
        android:backgroundTint="#000000"
        android:background="#000000"
        android:backgroundTintMode="src_over"
        android:src="@drawable/logo_larimaia" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:layout_weight="0.68">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cadastros"
            android:id="@+id/btn_cadastros" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Pedido"
            android:id="@+id/btn_consultar_pedido" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Novo Pedido"
            android:id="@+id/btn_novo_pedido" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todos os direitos reservados"
        android:id="@+id/tv_rodape"
        android:allowUndo="true"
        android:layout_gravity="right" />

</LinearLayout>
